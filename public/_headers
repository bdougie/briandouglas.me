# Cache control headers for briandouglas.me

# HTML pages - don't cache, ensure charset is declared
/*.html
  Content-Type: text/html; charset=UTF-8
  Cache-Control: no-cache, no-store, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block

# Root index page
/
  Content-Type: text/html; charset=UTF-8
  Cache-Control: no-cache, no-store, must-revalidate

# Blog post pages (directory-style URLs)
/posts/*
  Content-Type: text/html; charset=UTF-8
  Cache-Control: no-cache, no-store, must-revalidate

# Other HTML pages
/subscribe
  Content-Type: text/html; charset=UTF-8
  Cache-Control: no-cache, no-store, must-revalidate

# Default security headers for all routes
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block

# Cache static assets with fingerprints for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable
