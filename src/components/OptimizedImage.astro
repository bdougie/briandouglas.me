---
import { Image } from 'astro:assets';

export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  format?: 'webp' | 'avif' | 'png' | 'jpg';
  quality?: number;
}

const {
  src,
  alt,
  width,
  height,
  loading = 'lazy',
  class: className,
  format = 'webp',
  quality = 85
} = Astro.props;

const isGif = src.endsWith('.gif');
---

{isGif ? (
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    class={className}
    decoding="async"
  />
) : (
  <Image
    src={src}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    class={className}
    format={format}
    quality={quality}
    densities={[1, 2]}
  />
)}