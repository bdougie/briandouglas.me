---
// SearchModal - Cmd+K search powered by Pagefind
---

<dialog id="search-modal" class="fixed inset-0 z-50 bg-transparent p-0 m-0 max-w-none max-h-none w-full h-full">
  <div class="fixed inset-0 bg-black/60 backdrop-blur-sm" data-backdrop></div>
  <div class="fixed top-[20%] left-1/2 -translate-x-1/2 w-full max-w-xl bg-gray-900 border border-gray-700 rounded-xl shadow-2xl overflow-hidden">
    <div class="flex items-center gap-3 px-4 py-3 border-b border-gray-700">
      <svg class="w-5 h-5 text-gray-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <input
        id="search-input"
        type="text"
        placeholder="Search posts..."
        class="flex-1 bg-transparent text-white placeholder-gray-500 outline-none text-base"
        autocomplete="off"
      />
      <kbd class="hidden sm:inline-block text-xs text-gray-500 bg-gray-800 border border-gray-700 rounded px-1.5 py-0.5">Esc</kbd>
    </div>
    <div id="search-results" class="max-h-80 overflow-y-auto p-2">
      <div class="px-3 py-8 text-center text-sm text-gray-500">
        Type to search blog posts
      </div>
    </div>
  </div>
</dialog>

<script is:inline>
  var pagefind = null;
  var debounceTimer;

  var modal = document.getElementById('search-modal');
  var input = document.getElementById('search-input');
  var resultsContainer = document.getElementById('search-results');
  var backdrop = modal.querySelector('[data-backdrop]');

  async function loadPagefind() {
    if (pagefind) return;
    try {
      pagefind = await import('/pagefind/pagefind.js');
    } catch (e) {
      resultsContainer.innerHTML = '<div class="px-3 py-8 text-center text-sm text-red-400">Search index not found. Run a production build first.</div>';
    }
  }

  function openSearch() {
    modal.showModal();
    input.focus();
    loadPagefind();
  }

  function closeSearch() {
    modal.close();
    input.value = '';
    resultsContainer.innerHTML = '<div class="px-3 py-8 text-center text-sm text-gray-500">Type to search blog posts</div>';
  }

  async function performSearch(query) {
    if (!pagefind || !query.trim()) {
      resultsContainer.innerHTML = '<div class="px-3 py-8 text-center text-sm text-gray-500">Type to search blog posts</div>';
      return;
    }

    var search = await pagefind.search(query);
    if (search.results.length === 0) {
      resultsContainer.innerHTML = '<div class="px-3 py-8 text-center text-sm text-gray-500">No results found</div>';
      return;
    }

    var results = await Promise.all(search.results.slice(0, 8).map(function(r) { return r.data(); }));
    resultsContainer.innerHTML = results.map(function(result) {
      return '<a href="' + result.url + '" class="block px-3 py-3 rounded-lg hover:bg-gray-800 transition-colors group">' +
        '<div class="text-sm font-medium text-white group-hover:text-orange-400 transition-colors">' +
          (result.meta && result.meta.title ? result.meta.title : 'Untitled') +
        '</div>' +
        '<div class="text-xs text-gray-400 mt-1 line-clamp-2">' + result.excerpt + '</div>' +
      '</a>';
    }).join('');
  }

  input.addEventListener('input', function() {
    clearTimeout(debounceTimer);
    debounceTimer = setTimeout(function() { performSearch(input.value); }, 200);
  });

  // Cmd+K / Ctrl+K to toggle
  document.addEventListener('keydown', function(e) {
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      if (modal.open) {
        closeSearch();
      } else {
        openSearch();
      }
    }
  });

  // Escape to close
  modal.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      e.preventDefault();
      closeSearch();
    }
  });

  // Backdrop click to close
  backdrop.addEventListener('click', closeSearch);

  // Expose for nav button
  window.openSearch = openSearch;
</script>

<style>
  dialog::backdrop {
    display: none;
  }

  dialog[open] {
    animation: fadeIn 0.15s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
