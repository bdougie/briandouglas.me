---
import Navigation from '../components/Navigation.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = "bdougie on the internet", description = "Personal blog and website of Brian Douglas" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- Place theme script before any stylesheets or other resources to prevent flicker -->
    <script is:inline>
      // Execute immediately during page load
      const theme = localStorage.getItem('theme') || 
                    (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.classList.toggle('dark', theme === 'dark');
      localStorage.setItem('theme', theme);
    </script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <!-- Force the base URL to ensure all relative URLs resolve correctly -->
    <base href="/" />
  </head>
  <body class="bg-gray-50 dark:bg-primary text-highlight dark:text-text-light min-h-screen transition-colors duration-200">
    <div class="max-w-3xl mx-auto px-4 py-8">
      <header class="mb-12">
        <Navigation />
      </header>
      <main>
        <slot />
      </main>
      <footer class="mt-12 pt-8 border-t border-secondary">
        <p class="text-center text-highlight dark:text-text-light">Â© {new Date().getFullYear()} Brian Douglas. All rights reserved.</p>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --accent: 115, 95, 50;
    --accent-light: 198, 151, 73;
    --accent-dark: 40, 42, 58;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      rgb(var(--accent-dark)) 60%
    );
  }

  body {
    color: var(--text-gray); /* Use the new gray color for light mode */
  }

  .dark body {
    color: var(--text-light); /* Use existing variable for dark mode */
  }
</style>