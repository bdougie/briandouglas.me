---
import Layout from '../../layouts/Layout.astro';

const posts = await Astro.glob('./**/*.md');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);
---

<Layout title="Blog Posts">
  <div>
    <h1 class="text-3xl font-bold mb-8">Blog Postsi foo</h1>
    <div class="space-y-8">
      {sortedPosts.map((post) => (
        <article class="border-b border-secondary pb-8 last:border-0">
          <h2 class="text-2xl font-semibold mb-2">
            <a href={post.url} class="text-highlight hover:text-highlight-light transition-colors">
              {post.frontmatter.title}
            </a>
          </h2>
          <time class="text-highlight-dark dark:text-text-light text-sm block mb-3">
            {new Date(post.frontmatter.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
          <p class="text-highlight dark:text-text-light">{post.frontmatter.description}</p>
        </article>
      ))}
    </div>
  </div>
</Layout>