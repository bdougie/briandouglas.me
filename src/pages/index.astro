---
import Layout from '../layouts/Layout.astro';

const posts = await Astro.glob('./posts/**/*.md');
const sortedPosts = posts
  .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime())
  .slice(0, 5);
---

<Layout>
  <div class="prose lg:prose-xl">
    <h1>Hi, I'm Brian Douglas</h1>
    <p class="lead">
      I  write code. Welcome to the place on the internet where I share my thoughts on software development, open source, and technology.
    </p>
  </div>

  <section class="mt-12">
    <h2 class="text-2xl font-bold mb-6">Recent Posts</h2>
    <div class="space-y-8">
      {sortedPosts.map((post) => {
        // Extract the filename
        const filename = post.file.split('/').pop();
        const [year, month, day, ...titleParts] = filename.replace('.md', '').split('-');
        const complexSlug = `${year}/${month}/${day}/${titleParts.join('-')}`;
        
        return (
          <article>
            <h3 class="text-xl font-semibold">
              <a href={`/posts/${complexSlug}/`} class="hover:text-gray-600">
                {post.frontmatter.title}
              </a>
            </h3>
            <time class="text-gray-500 text-sm">
              {new Date(post.frontmatter.date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </time>
            <p class="mt-2 text-gray-700">{post.frontmatter.description}</p>
          </article>
        );
      })}
    </div>
  </section>
</Layout>