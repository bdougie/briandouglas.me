---
import Layout from '../layouts/Layout.astro';

const site = Astro.site?.toString() || 'https://briandouglas.me';
const rssUrl = new URL('/rss.xml', site).toString();
---

<Layout title="Subscribe - bdougie">
  <div class="max-w-2xl">
    <h1 class="text-3xl font-bold text-white mb-8">Subscribe</h1>
    
    <div class="space-y-8">
      <!-- RSS Section -->
      <section class="bg-gray-900/30 border border-gray-800 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-white mb-4 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-orange-500">
            <path d="M4 11a9 9 0 0 1 9 9"></path>
            <path d="M4 4a16 16 0 0 1 16 16"></path>
            <circle cx="5" cy="19" r="1"></circle>
          </svg>
          RSS Feed
        </h2>
        <p class="text-gray-400 mb-4">
          Subscribe to my RSS feed to get new posts delivered directly to your feed reader.
        </p>
        <div class="flex flex-col sm:flex-row gap-3">
          <a 
            href={rssUrl}
            class="inline-flex items-center justify-center px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white rounded-lg transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
              <path d="M4 11a9 9 0 0 1 9 9"></path>
              <path d="M4 4a16 16 0 0 1 16 16"></path>
              <circle cx="5" cy="19" r="1"></circle>
            </svg>
            RSS Feed
          </a>
          <button
            onclick={`navigator.clipboard.writeText('${rssUrl}'); this.textContent = 'Copied!'; setTimeout(() => this.textContent = 'Copy RSS URL', 2000)`}
            class="inline-flex items-center justify-center px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white rounded-lg transition-colors"
          >
            Copy RSS URL
          </button>
        </div>
        <div class="mt-4 p-3 bg-gray-900/50 rounded-lg">
          <code class="text-xs text-gray-500 break-all">{rssUrl}</code>
        </div>
      </section>

      <!-- Social Media Section -->
      <section class="bg-gray-900/30 border border-gray-800 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-white mb-4">Follow on Social Media</h2>
        <p class="text-gray-400 mb-4">
          Stay connected and get updates through my social channels.
        </p>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <a 
            href="https://github.com/bdougie" 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 px-4 py-3 bg-gray-800 hover:bg-gray-700 rounded-lg transition-colors group"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="text-gray-400 group-hover:text-white transition-colors">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span class="text-gray-300 group-hover:text-white transition-colors">GitHub</span>
          </a>
          
          <a 
            href="https://bsky.app/profile/bizza.pizza" 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 px-4 py-3 bg-gray-800 hover:bg-gray-700 rounded-lg transition-colors group"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="text-gray-400 group-hover:text-white transition-colors">
              <path d="M12 11.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm0-5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm0 10c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm0 5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
            </svg>
            <span class="text-gray-300 group-hover:text-white transition-colors">Bluesky</span>
          </a>

          <a 
            href="https://twitter.com/bdougieyo" 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 px-4 py-3 bg-gray-800 hover:bg-gray-700 rounded-lg transition-colors group"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="text-gray-400 group-hover:text-white transition-colors">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            <span class="text-gray-300 group-hover:text-white transition-colors">X (Twitter)</span>
          </a>

          <a 
            href="https://www.linkedin.com/in/bdougieyo/" 
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 px-4 py-3 bg-gray-800 hover:bg-gray-700 rounded-lg transition-colors group"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="text-gray-400 group-hover:text-white transition-colors">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
            <span class="text-gray-300 group-hover:text-white transition-colors">LinkedIn</span>
          </a>
        </div>
      </section>

      <!-- Newsletter Section (placeholder for future) -->
      <section class="bg-gray-900/30 border border-gray-800 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-white mb-4 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-orange-500">
            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
            <path d="m22 7-10 5L2 7"></path>
          </svg>
          Newsletter
        </h2>
        <p class="text-gray-400">
          Newsletter coming soon! For now, subscribe via RSS or follow me on social media for updates.
        </p>
      </section>
    </div>
  </div>
</Layout>