import rss from '@astrojs/rss';
import type { APIContext } from 'astro';

export async function GET(context: APIContext) {
  const posts = await import.meta.glob('./posts/**/*.md', { eager: true });
  
  const validItems = [];
  
  for (const [path, post] of Object.entries(posts)) {
    const filename = path.split('/').pop()!;
    const [year, month, day, ...titleParts] = filename.replace('.md', '').split('-');
    const slug = `${year}/${month}/${day}/${titleParts.join('-')}`;
    
    // Type guard - ensure post has frontmatter
    if (!post || typeof post !== 'object' || !('frontmatter' in post)) continue;
    
    const frontmatter = (post as any).frontmatter;
    
    // Skip drafts
    if (frontmatter.draft) continue;
    
    // Ensure all required fields are present and valid
    if (!frontmatter.title || !frontmatter.date) continue;
    
    // Handle description - ensure it's a non-empty string
    let description = frontmatter.description;
    if (!description || typeof description !== 'string' || description === '>-' || description.trim() === '') {
      description = frontmatter.title;
    }
    
    const item = {
      title: String(frontmatter.title).trim(),
      description: String(description).trim(),
      link: `/posts/${slug}/`,
      pubDate: new Date(frontmatter.date + 'T00:00:00')
    };
    
    // Validate the item has all required fields
    if (item.title && item.description && item.link && item.pubDate) {
      validItems.push(item);
    }
  }
  
  const items = validItems.sort((a, b) => b.pubDate.getTime() - a.pubDate.getTime());

  return rss({
    title: 'Brian Douglas',
    description: 'A blog about software development, open source, and developer experience',
    site: context.site?.toString() || 'https://briandouglas.me',
    items: items,
    customData: `<language>en-us</language>`,
  });
}